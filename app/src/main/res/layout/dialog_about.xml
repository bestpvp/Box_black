<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_bg_main"
    android:orientation="vertical"
    android:padding="@dimen/vs_30">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vs_20"
            android:text="@string/app_name"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/ts_24" />

    </RelativeLayout>

    <ImageView
        android:layout_width="263dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/vs_20"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/qrcode" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/vs_600"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vs_20"
        android:text="@string/app_name"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/ts_24"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_show_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vs_30"
        android:text="@string/app_name"
        android:textColor="@color/color_000000_80"
        android:textSize="@dimen/ts_24" />


</LinearLayout>
