<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_bg_main"
    android:orientation="vertical"
    android:padding="@dimen/vs_30">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_text"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_foreground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vs_20"
            android:text="tv_title"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/ts_24" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_version_message"
        android:layout_width="@dimen/vs_600"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vs_20"
        android:lineSpacingExtra="@dimen/ts_50"
        android:lineSpacingMultiplier="0"
        android:shadowColor="@color/color_000000_60"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:text="tv_version_message"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/ts_24"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="@dimen/vs_600"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vs_20"
        android:text="tv_version"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/ts_24"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_show_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vs_30"
        android:text="查看当前版本"
        android:textColor="@color/color_000000_80"
        android:textSize="@dimen/ts_24" />


</LinearLayout>
